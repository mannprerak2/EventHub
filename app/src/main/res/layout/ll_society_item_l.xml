<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/imageView_society"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="end"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/colorName"
                android:id="@+id/textView_society_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <CheckBox
                android:id="@+id/button_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@drawable/subselector"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <TextView
            android:textColor="@color/colorDescp"
            android:minLines="1"
            android:maxLines="4"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/textView_society_descp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="1dp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorLocation"
                android:id="@+id/textView_society_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>