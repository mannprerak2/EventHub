<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_share"
        fancy:fb_text="Share this App"
        fancy:fb_textColor="#000000"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/user_share"
        android:layout_width="wrap_content"
        fancy:fb_focusColor="#c4c4c4"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_rate_us"
        fancy:fb_text="Rate Us"
        fancy:fb_textColor="#000000"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/user_rate"
        android:layout_width="wrap_content"
        fancy:fb_focusColor="#c4c4c4"
        android:padding="20dp"
        android:layout_height="wrap_content"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_event_showcase"
        fancy:fb_text="Showcase your event"
        fancy:fb_textColor="#000000"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/user_event_showcase"
        android:layout_width="wrap_content"
        fancy:fb_focusColor="#c4c4c4"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_about_us"
        fancy:fb_text="About Us"
        fancy:fb_textColor="#000000"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/user_about_us"
        android:layout_width="wrap_content"
        fancy:fb_focusColor="#c4c4c4"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_contact_us"
        fancy:fb_text="Contact Us"
        fancy:fb_textColor="#000000"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/user_contact_us"
        android:layout_width="wrap_content"
        fancy:fb_focusColor="#c4c4c4"
        android:padding="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>